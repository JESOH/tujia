<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_feature_hot_unit_defaultPicture"
        android:layout_width="match_parent"
        android:layout_height="180dp" />

    <ImageView
        android:id="@+id/iv_feature_banner_cover"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignBottom="@id/iv_feature_hot_unit_defaultPicture"
        android:background="@color/black_20_percent" />

    <TextView
        android:id="@+id/tv_feature_hot_unitName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_feature_banner_cover"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="15sp" />

</RelativeLayout>