<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/sl_detail_scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="12">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/background_white">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="180dp">

                    <android.support.v4.view.ViewPager
                        android:id="@+id/vp_detail_viewPager"
                        android:layout_width="match_parent"
                        android:layout_height="180dp"/>

                    <ImageView
                        android:id="@+id/iv_detail_back"
                        android:layout_width="9dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/arrow_back"
                        android:layout_margin="8dp"/>

                    <ImageView
                        android:id="@+id/iv_detail_msg"
                        android:layout_width="wrap_content"
                        android:layout_height="8dp"
                        android:src="@drawable/icon_actionbar_menu_black"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="15dp"/>
                </RelativeLayout>

                <!--<com.it.tujia.view.DetailContentView-->
                    <!--android:id="@+id/Detail_ContentView"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content">-->

                <!--</com.it.tujia.view.DetailContentView>-->

                <include
                    android:id="@+id/include1"
                    layout="@layout/activity_detail_introduce_header_content"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/light_gray"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/background_white">

                <!--<LinearLayout-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:orientation="horizontal">-->
                    <!-- -->
                    <!-- -->
                    <!-- -->
                <!--</LinearLayout>-->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="电话咨询"
                    android:textSize="12sp"
                    android:textColor="@color/orange"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/shape_discover_bg_rg"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="3dp"
                    android:paddingTop="3dp"
                    android:layout_margin="20dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.2dp"
                    android:background="@color/light_gray"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="80dp"
                    android:layout_marginRight="80dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tv_detail_overall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="评分"
                            android:textColor="@color/gray"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tv_detail_totalCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="点评"
                            android:textColor="@color/gray"/>
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_detail_commentSample"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="..."
                    android:drawableLeft="@drawable/quotes_left"
                    android:drawableRight="@drawable/quotes_right"
                    android:drawablePadding="10dp"
                    android:layout_gravity="center"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="全部"
                    android:textSize="12sp"
                    android:textColor="@color/orange"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/shape_discover_bg_rg"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="3dp"
                    android:paddingTop="3dp"
                    android:layout_margin="20dp"/>


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/light_gray"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/background_white"
                android:padding="10dp">

                <!--酒店地址-->
                <TextView
                    android:id="@+id/tv_detail_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:textSize="16sp"
                    android:text=""/>

                <FrameLayout
                    android:id="@+id/fl_fg_baidumap"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="公寓,小区介绍与周边信息"
                    android:textSize="16sp"
                    android:textColor="@color/gray"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_gravity="center"/>

                <!--酒店介绍-->
                <TextView
                    android:id="@+id/tv_detail_introduction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""/>


                <TextView
                    android:id="@+id/tv_detail_nearby"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="详情"
                    android:textSize="12sp"
                    android:textColor="@color/orange"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/shape_discover_bg_rg"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="3dp"
                    android:paddingTop="3dp"
                    android:layout_margin="20dp"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/light_gray"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/background_white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="配置设施"
                    android:textColor="@color/gray"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center">
                    <!--自定义-->
                    <TextView
                        android:id="@+id/tv_wifi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableTop="@drawable/wifi_icon"
                        android:padding="6dp"
                        android:textColor="@color/gray"
                        android:textSize="10sp"
                        android:gravity="center"
                        android:text="WIFI"/>

                    <TextView
                        android:id="@+id/tv_television"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableTop="@drawable/television_icon"
                        android:padding="6dp"
                        android:textColor="@color/gray"
                        android:textSize="10sp"
                        android:gravity="center"
                        android:text="电视"/>

                    <TextView
                        android:id="@+id/tv_washer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableTop="@drawable/washer_icon"
                        android:padding="6dp"
                        android:textColor="@color/gray"
                        android:textSize="10sp"
                        android:gravity="center"
                        android:text="洗衣机"/>

                    <TextView
                        android:id="@+id/tv_kitchen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableTop="@drawable/kitchen_icon"
                        android:padding="6dp"
                        android:textColor="@color/gray"
                        android:textSize="10sp"
                        android:gravity="center"
                        android:text="厨房"/>

                    <TextView
                        android:id="@+id/tv_bare"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableTop="@drawable/shower_icon"
                        android:padding="6dp"
                        android:textColor="@color/gray"
                        android:textSize="10sp"
                        android:gravity="center"
                        android:text="淋浴"/>

                    <TextView
                        android:id="@+id/tv_refrigerator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableTop="@drawable/refrigerator_icon"
                        android:padding="6dp"
                        android:textColor="@color/gray"
                        android:textSize="10sp"
                        android:gravity="center"
                        android:text="冰箱"/>

                    <TextView
                        android:id="@+id/tv_air_conditioning"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableTop="@drawable/air_conditioning_icon"
                        android:padding="6dp"
                        android:textColor="@color/gray"
                        android:textSize="10sp"
                        android:gravity="center"
                        android:text="空调"/>

                    <TextView
                        android:id="@+id/tv_network"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableTop="@drawable/network_icon"
                        android:padding="6dp"
                        android:textColor="@color/gray"
                        android:gravity="center"
                        android:textSize="10sp"
                        android:text="电脑"/>


                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="全部"
                    android:textSize="12sp"
                    android:textColor="@color/orange"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/shape_discover_bg_rg"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="3dp"
                    android:paddingTop="3dp"
                    android:layout_margin="20dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.2dp"
                    android:background="@color/light_gray"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">
                    <!--自定义-->

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="规则和保障"
                        android:textColor="@color/gray"
                        android:layout_margin="10dp"
                        android:layout_gravity="center"/>

                    <TextView
                        android:id="@+id/tv_detail_hotelRemarks"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""/>

                    <TextView
                        android:id="@+id/tv_hold_rule"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="全部"
                        android:textSize="12sp"
                        android:textColor="@color/orange"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/shape_discover_bg_rg"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="3dp"
                        android:paddingTop="3dp"
                        android:layout_margin="20dp"/>

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/light_gray"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/background_white">

                <TextView
                    android:id="@+id/tv_detail_similarUnits"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="周边相似房屋"
                    android:textColor="@color/gray"
                    android:layout_margin="10dp"
                    android:layout_gravity="center"/>

                <com.it.tujia.view.TuJiaDiscoverDetailListView
                    android:id="@+id/lv_detail_listview_item"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_detail_unitID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="房屋编号:22155"
                android:background="@color/light_gray"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"/>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@drawable/background_white">

        <ImageView
            android:id="@+id/iv_detail_share"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="25dp"
            android:clickable="true"
            android:onClick="doShare"
            android:src="@drawable/ic_share_unit_detail_bottom"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="25dp"
            android:src="@drawable/ic_favorite_grey_unit_detail"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="2.5"
            android:layout_height="match_parent"
            android:textColor="@color/white"
            android:background="@color/orange"
            android:textSize="20sp"
            android:gravity="center"
            android:text="立即预定"/>

    </LinearLayout>

</LinearLayout>