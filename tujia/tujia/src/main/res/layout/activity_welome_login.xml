<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp">

    <ImageView
        android:id="@+id/iv_login_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/arrow_back"
        android:paddingBottom="15dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:drawablePadding="10dp"
        android:text="欢迎回家!"
        android:textSize="22sp"
        android:textColor="@color/black"
        android:drawableTop="@mipmap/ic_logotujia_login"/>

    <RadioGroup
        android:id="@+id/rg_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp">

        <RadioButton
            android:id="@+id/rb_login_normal"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:button="@null"
            android:textSize="16sp"
            android:gravity="center"
            android:checked="true"
            android:padding="5dp"
            android:background="@drawable/select_discover_title"
            android:text="普通登陆"/>

        <RadioButton
            android:id="@+id/rb_login_mobile"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:button="@null"
            android:gravity="center"
            android:textSize="16sp"
            android:padding="5dp"
            android:background="@drawable/select_discover_title"
            android:text="手机动态码登陆"/>

    </RadioGroup>

    <FrameLayout
        android:id="@+id/fl_login_container"
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:layout_height="80dp"/>

    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="登陆"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:background="@drawable/scrollbar_bg"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="忘记密码？"
        android:textSize="16sp"
        android:layout_gravity="center"
        android:padding="15dp"/>

    <TextView
        android:id="@+id/tv_logon_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="立刻注册"
        android:textSize="18sp"
        android:textColor="@color/orange"
        android:layout_gravity="center"
        android:background="@drawable/shape_discover_bg_rg"
        android:padding="8dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="—————— 第三方账号登陆 ——————"
        android:layout_gravity="center"
        android:padding="15dp"
        android:textSize="16sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tv_weixin_login"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="微信登陆"
            android:drawableTop="@mipmap/ic_weixin_login"
            android:gravity="center"/>

        <TextView
            android:id="@+id/tv_QQ_login"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="QQ登陆"
            android:drawableTop="@mipmap/ic_qq_login"
            android:gravity="center"/>

        <TextView
            android:id="@+id/tv_weibo_login"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="微博登陆"
            android:drawableTop="@mipmap/ic_sinaweibo_login"
            android:gravity="center"/>
    </LinearLayout>

</LinearLayout>