<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_detail_content"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_detail_unitName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:padding="5dp"
            android:text=""/>
        <ImageView
            android:id="@+id/iv_detail_isSweetomeHotel"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_sweetome_hotel"
            android:visibility="gone"
            android:layout_gravity="center"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_detail_highlight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:padding="5dp"
        android:textColor="@color/gray"/>
    <TextView
        android:id="@+id/tv_detail_roomCountSummary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:padding="5dp"
        android:textColor="@color/gray"/>

    <LinearLayout
        android:id="@+id/ll_detail_featureTagList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            android:id="@+id/tv_detail_featureTagList1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/white"
            android:padding="5dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/shape_discover_bg_summary"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_detail_featureTagList2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/white"
            android:padding="5dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/shape_discover_bg_summary"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_detail_featureTagList3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/white"
            android:padding="5dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/shape_discover_bg_summary"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_detail_featureTagList4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/white"
            android:padding="5dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/shape_discover_bg_summary"
            android:visibility="gone"/>

    </LinearLayout>

</LinearLayout>
