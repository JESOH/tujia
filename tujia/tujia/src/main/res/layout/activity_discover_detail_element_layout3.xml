<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:background="@color/white">

    <ImageView
        android:id="@+id/iv_theme_layout3_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/default_unit_big"/>

    <ImageView
        android:id="@+id/iv_theme_layout3_collect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_collect_transparent"
        android:layout_alignParentRight="true"
        android:visibility="invisible"
        android:padding="10dp"/>

    <TextView
        android:id="@+id/tv_theme_layout3_unitName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_theme_layout3_img"
        android:padding="5dp"
        android:textSize="16sp"
        android:text="三亚途家大东海两室经典园景双卧套房"/>

    <TextView
        android:id="@+id/tv_theme_layout3_summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_theme_layout3_unitName"
        android:padding="5dp"
        android:textColor="@color/gray"
        android:text="靠近市区，生活配套方便"/>


</RelativeLayout>