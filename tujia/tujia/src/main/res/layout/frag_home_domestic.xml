<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">
    <RelativeLayout
        android:id="@+id/rl_frag_domestic"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_frag_search_domestic"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_home_domestic"/>
        <TextView
            android:id="@+id/tv_frag_search_domestic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:layout_toRightOf="@id/iv_frag_search_domestic"
            android:textSize="18sp"
            android:text="国内公寓"/>
        <TextView
            android:id="@+id/tv_frag_domestic_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:layout_toRightOf="@id/iv_frag_search_domestic"
            android:layout_below="@id/tv_frag_search_domestic"
            android:textColor="@color/gray"
            android:text="281个目的地"/>
        <ImageView
            android:src="@drawable/ic_arrow_right_profile"
            android:layout_width="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/tv_frag_search_domestic"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_centerline_frag_home"
        android:background="@color/dark"
        android:layout_width="1dp"
        android:layout_alignBottom="@id/iv_frag_search_domestic"
        android:layout_centerHorizontal="true"
        android:layout_height="match_parent" />




    <RelativeLayout
        android:id="@+id/rl_frag_oversea"
       android:layout_weight="1"
        android:padding="10dp"
        android:layout_marginLeft="10dp"
       android:layout_width="match_parent"
       android:layout_height="match_parent">
       <ImageView
           android:id="@+id/iv_frag_overseas"
           android:paddingLeft="10dp"
           android:layout_width="wrap_content"
           android:layout_height="25dp"
           android:layout_centerVertical="true"
           android:src="@drawable/icon_home_overseas"/>
       <TextView
           android:id="@+id/tv_frag_overseas"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_toRightOf="@id/iv_frag_overseas"
           android:textSize="18sp"
           android:paddingLeft="5dp"
           android:text="海外港台"/>
       <TextView
           android:id="@+id/tv_frag_overseas_count"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_toRightOf="@id/iv_frag_overseas"
           android:layout_below="@id/tv_frag_overseas"
           android:textColor="@color/gray"
           android:paddingLeft="5dp"
           android:text="281个目的地"/>
       <ImageView
           android:src="@drawable/ic_arrow_right_profile"
           android:layout_width="wrap_content"
           android:layout_marginLeft="10dp"
           android:layout_toRightOf="@id/tv_frag_overseas"
           android:layout_centerVertical="true"
           android:layout_height="wrap_content" />



   </RelativeLayout>






</LinearLayout>