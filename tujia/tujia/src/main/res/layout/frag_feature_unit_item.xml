<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="6dp"
    android:layout_marginLeft="6dp"
    android:layout_marginTop="8dp"
    android:background="@drawable/shape_feature_item_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/iv_feature_unit_picture"
            android:layout_width="match_parent"
            android:clickable="true"
            android:layout_height="120dp"
            android:src="@drawable/default_unit_big" />


        <View
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_alignBottom="@id/iv_feature_unit_picture"
            android:background="@drawable/bg_tag_price_gradient" />

        <TextView
            android:id="@+id/tv_feature_unit_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_feature_unit_picture"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:text="￥178"
            android:textColor="@color/detail_ww_price"
            android:textSize="17sp" />


        <ImageView
            android:id="@+id/iv_feature_unit_favorite"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignRight="@id/iv_feature_unit_picture"
            android:layout_margin="10dp"
            android:clickable="true"
            android:src="@drawable/selector_feature_favorite" />
    </RelativeLayout>


    <TextView
        android:id="@+id/tv_feature_unit_unitName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="奢华欧式高尔夫别墅"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_feature_unit_houseType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="8dp"
        android:text="精品公寓"
        android:textColor="@color/orange"
        android:textSize="12sp" />

</LinearLayout>