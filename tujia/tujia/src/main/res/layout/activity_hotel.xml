<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/title_city_detail"/>


<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >
    <ListView
        android:id="@+id/lv_city_hotel_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></ListView>
    <include
        android:id="@+id/search_city_detail"
        layout="@layout/search_city_detail"/>


    <RadioGroup
        android:id="@+id/rg_city_details"
        android:background="#88000000"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/select_city_hotel"
            android:text="筛选"
            android:textColor="@color/white"
            style="@style/rb_homepage_style"
            android:drawableTop="@mipmap/ic_filter_total_white"
            />
        <RadioButton
            android:id="@+id/location_city_hotel"
            android:text="位置"
            android:textColor="@color/white"
            style="@style/rb_homepage_style"
            android:drawableTop="@mipmap/ic_filter_area_white"
            />
        <RadioButton
            android:id="@+id/price_city_hotel"
            android:text="价格"
            android:textColor="@color/white"
            style="@style/rb_homepage_style"
            android:drawableTop="@mipmap/ic_filter_price_white"
            />
        <RadioButton
            android:id="@+id/sort_city_hotel"
            android:text="排序"
            android:textColor="@color/white"
            style="@style/rb_homepage_style"
            android:drawableTop="@mipmap/ic_filter_order_white"
            />
    </RadioGroup>


</RelativeLayout>
    </LinearLayout>
