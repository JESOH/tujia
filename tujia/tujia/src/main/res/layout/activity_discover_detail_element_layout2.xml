<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:background="@color/white">

    <ImageView
        android:id="@+id/iv_theme_layout2_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/default_unit_big"/>

    <TextView
        android:id="@+id/tv_theme_layout2_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_alignBottom="@+id/iv_theme_layout2_img"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="15dp"
        android:layout_alignParentLeft="true"
        android:text="台湾"
        android:textSize="16sp"
        android:drawableLeft="@mipmap/ic_theme_scnic"
        android:textColor="@color/white"
        android:gravity="center"
        android:drawablePadding="6dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:background="@drawable/shape_discover_bg_summary"/>

    <TextView
        android:id="@+id/tv_theme_layout2_introduction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_theme_layout2_img"
        android:padding="5dp"
        android:text="一想到去南方过冬"/>

</RelativeLayout>