<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_gridview_title"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:gravity="center"
        android:text="最新"
        android:drawableLeft="@drawable/ic_vertical_marker"
        android:drawablePadding="10dp"
        android:paddingLeft="5dp"
        android:textSize="17sp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_discover_gw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/default_unit_middle"
            android:layout_centerInParent="true"
            android:scaleType="fitXY"/>

        <TextView
            android:id="@+id/tv_discover_gw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:layout_alignBottom="@+id/iv_discover_gw"
            android:layout_alignLeft="@+id/iv_discover_gw"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/white"
            android:text=""/>

    </RelativeLayout>
</LinearLayout>