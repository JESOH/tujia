<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:paddingRight="10dp"
    android:paddingLeft="10dp"
    android:paddingTop="5dp"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView
        android:id="@+id/iv_frag_search_item"
        android:src="@drawable/icon_search_domestic"
        android:layout_marginRight="20dp"
        android:layout_width="30dp"
        android:layout_height="30dp" />
    <TextView
        android:id="@+id/city_frag_search_item"
        android:text="北京"
        android:layout_centerVertical="true"
        android:textSize="15sp"
        android:layout_toRightOf="@id/iv_frag_search_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="25dp"
        android:src="@drawable/ic_arrow_right_profile"/>
    <TextView
        android:id="@+id/more_frag_search_item"
        android:text="更多"
        android:layout_marginRight="10dp"
        android:visibility="gone"
        android:layout_centerVertical="true"
        android:textColor="@color/gray"
        android:textSize="13sp"
        android:layout_toLeftOf="@id/iv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/iv_search_item_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/iv_frag_search_item"
        android:layout_below="@id/iv_frag_search_item"/>
    <!-- <ImageView
       android:id="@+id/iv_frag_search_item_location"
